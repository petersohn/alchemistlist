<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kangirigungi.alchemistlist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ExperimentActivity"
            android:label="@string/title_activity_experiment" >
        </activity>
        <activity
            android:name=".IngredientTextChooser"
            android:label="@string/title_activity_ingredient_chooser" >
        </activity>
        <activity
            android:name=".EffectTextChooser"
            android:label="@string/title_activity_effect_chooser" >
        </activity>
        <activity
            android:name=".DbTextChooser"
            android:label="@string/title_activity_db_chooser" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ManageIngredient"
            android:label="@string/title_activity_manage_ingredient" >
        </activity>
        <activity
            android:name=".ManageEffect"
            android:label="@string/title_activity_manage_effect" >
        </activity>
    </application>

</manifest>